<!DOCTYPE html>
<html>
  <head>
    <title>ChatBot.in</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

  </head>
  <body class="bg-blue">
     <h4 class="text-center text-white mt-3 display-4">Welcome to Chat-Bot</h4>
     <div class="container">
       <div class="row">
         <div class="col-sm-6 offset-sm-3">
             <div class="wrapper bg-white rounded mt-4  poppins">
                 <div class="progress-bar"></div>
                 <section class="p-4">
                    <div class="header text-center">
                        <p>Create an account</p>
                        <p><a href="/" class="text-primary">Login</a></p>
                       </div>
                       <div class="form p-4">
                         <form action="/signup" method="POST">
                            <div class="form-group">
                              <label for="uname">Username</label>
                              <input type="text" name="uname" placeholder="Enter you Username"  class="form-control " required>
                            </div> 
                            <div class="form-group">
                                <label for="Email address">Email address</label>
                                <input type="text" placeholder="Enter your email addresss" class="form-control"  name="email" required>
                            
                             </div>
                            <div class="form-group">
                                <label for="Mobile number">Mobile number</label>
                                <input type="text" placeholder="Enter your mobile number" class="form-control" name="number" required>
                            </div>
                            <div class="form-group">
                              <label for="pwd">Password</label>
                              <input type="password" name="pwd" placeholder="Enter you Password" class="form-control" required>
                            </div> 
                              <button type="submit" class="btn bg-blue btn-block text-white ">Signup</button>
                            <div class="form-check mt-3">
                              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" required>
                              <label class="form-check-label" for="defaultCheck1">
                                Keep me logged in
                              </label>
                            </div>
                         </form>
                       </div> 
                 </section>
                 <div class="progress-bar2 rounded-top"></div>
             </div>
         </div>
       </div>
     </div>

    <% if (msg !== '') { %>
      <div class="model rounded <%= className %> <%= className2 %> ">
        <div class="model-content poppins pt-2 pl-3"><%= msg %> </div>
        <div id="closeBtn" onclick="hideModel()">X</div>
     </div>
    <% } %>
    <script>
       const modal = document.querySelector('.model');
       function hideModel() {
        modal.style.display = "none";
       }
    </script>
  </body>
</html>
